<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:clipToPadding="false"
        android:id="@+id/rwvsxf12kj29"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/gradation"
        android:paddingTop="25dp"
        android:paddingHorizontal="19dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rifptlsklxqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/alpha_round_outline"
                android:paddingVertical="22dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ry5azrots45n"
                    android:textColor="#411A66"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Login"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rg0pijs9cfbp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_outline"
                android:paddingVertical="56dp"
                android:layout_marginBottom="31dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rk94pulp1wvo"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/alpha_round_outline"
                    android:paddingVertical="0dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="21dp"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="60dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/login_email_text"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:hint="Email"
                        android:textColor="#C99DF3"
                        android:textSize="12sp"
                        android:inputType="textEmailAddress"
                        android:layout_weight="1"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-3dp"
                        />

                    <ImageView
                        android:id="@+id/rmfqnll180dq"
                        android:layout_width="39dp"
                        android:layout_height="21dp"
                        android:src="@drawable/img_envelope"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rcykz5m1uzoe"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginHorizontal="7dp"
                    android:layout_marginBottom="48dp"
                    android:background="@drawable/alpha_round_outline"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="60dp">

                    <EditText
                        android:id="@+id/login_password_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="-3dp"
                        android:layout_weight="1"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textColor="#C99DF3"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/rc5mha0r6ou"
                        android:layout_width="39dp"
                        android:layout_height="21dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_lock" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_summit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="97dp"
                    android:layout_marginBottom="105dp"
                    android:background="@drawable/alpha_round_outline"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/rz4kx3iwbok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summit"
                        android:textColor="#401A65"
                        android:textSize="20sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/login_forgotpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/alpha_round_outline"
                    android:paddingVertical="24dp"
                    android:layout_marginHorizontal="39dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rya9wirlp67s"
                        android:textColor="#411A66"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="계정을 잊으셨나요?"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearRowhomeOne"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:background="@drawable/alpha_round_outline">

                <!-- 첫 번째 이미지 뷰 -->
                <ImageView
                    android:id="@+id/imageHomeOne"
                    android:layout_height="50dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img_home" />

                <!-- 첫 번째 선 -->
                <View
                    android:id="@+id/lineLineoneOne"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#1A000000" />

                <!-- 두 번째 이미지 뷰 -->
                <ImageView
                    android:id="@+id/imageWhatidoOne"
                    android:layout_height="50dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img_whatido"/>

                <!-- 두 번째 선 -->
                <View
                    android:id="@+id/lineLineoneThree"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    android:background="#1A000000" />

                <!-- 세 번째 이미지 뷰 -->
                <ImageView
                    android:id="@+id/imageAutomaticOne"
                    android:layout_height="50dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/img_automatic" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="match_parent"
    android:layout_height="1996dp"
    android:background="@drawable/background"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/layout_light_purple_grad">
        <TextView
            android:id="@+id/review"
            android:layout_width="68dp"
            android:layout_height="27dp"
            android:text="@string/review"
            android:textAppearance="@style/char20purple"
            android:gravity="top"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_5"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layout_light_purple_grad">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_id_verified"
            />
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_id"
            android:layout_marginTop="11dp"
            android:layout_marginStart="40dp"
            android:textAppearance="@style/char12lightpurple"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_light_purple">

        <ImageView
            android:id="@+id/review_img1"
            android:layout_width="87.45dp"
            android:layout_height="77dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/review_title1"
            android:layout_width="84dp"
            android:layout_height="15dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="17dp"
            android:gravity="top"
            android:text="@string/review_empty_title"
            android:textAppearance="@style/char12black" />

        <TextView
            android:id="@+id/review_content1"
            android:layout_width="243dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="43dp"
            android:gravity="top"
            android:text="@string/review_empty_content"
            android:textAppearance="@style/char12black" />

        <TextView
            android:id="@+id/review_date1"
            android:layout_width="69dp"
            android:layout_height="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="@string/review_empty_date"
            android:textAppearance="@style/char12lightpurple" />

        <ImageView
            android:id="@+id/review_thumbs_up1"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/img_thumbs_up"
            />

        <TextView
            android:id="@+id/review_thumbs_up_text1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="63dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:text="@string/review_empty_thumbsup_num"
            android:textAppearance="@style/char12pink"
            android:gravity="top"
            />

        <ImageView
            android:id="@+id/review_chat_bubble1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/img_chat_bubble"
            />

        <TextView
            android:id="@+id/review_chat_text1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:text="@string/review_empty_comment_num"
            android:textAppearance="@style/char12pink"
            android:gravity="top"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_light_bg">

        <ImageView
            android:id="@+id/review_img2"
            android:layout_width="87.45dp"
            android:layout_height="77dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/review_title2"
            android:layout_width="84dp"
            android:layout_height="15dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="17dp"
            android:gravity="top"
            android:text="@string/review_empty_title"
            android:textAppearance="@style/char12black" />

        <TextView
            android:id="@+id/review_content2"
            android:layout_width="243dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="43dp"
            android:gravity="top"
            android:text="@string/review_empty_content"
            android:textAppearance="@style/char12black" />

        <TextView
            android:id="@+id/review_date2"
            android:layout_width="69dp"
            android:layout_height="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="@string/review_empty_date"
            android:textAppearance="@style/char12lightpurple" />

        <ImageView
            android:id="@+id/review_thumbs_up2"
            android:layout_width="15dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/img_thumbs_up"
            />

        <TextView
            android:id="@+id/review_thumbs_up_text2"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="63dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:text="@string/review_empty_thumbsup_num"
            android:textAppearance="@style/char12pink"
            android:gravity="top"
            />

        <ImageView
            android:id="@+id/review_chat_bubble2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/img_chat_bubble"
            />

        <TextView
            android:id="@+id/review_chat_text2"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:text="@string/review_empty_comment_num"
            android:textAppearance="@style/char12pink"
            android:gravity="top"
            />
    </RelativeLayout>
</LinearLayout>

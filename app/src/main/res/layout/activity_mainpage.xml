<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ryyrxnk48qf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rp4jzsdf7i8m"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="34dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_logo"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rx1zz8d7691c"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="end"
                    android:background="#FFFFFF"

                    >

                    <TextView
                        android:id="@+id/mainpage_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="stonecap"
                        android:textColor="#5A5ABB"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rfh0v5aa39v9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="31dp"
                android:layout_marginHorizontal="40dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_build"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_box_purple"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_newbuild"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/img_build"
                        android:src="@drawable/img_whatido85"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rea8v3wm5z8e"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="신규/수정 견적"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/layout_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_box_purple"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_account"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_account"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/r8t7zo8z5auc"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="계정"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rkrybo4jfbcd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_review"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box_purple"                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/img_review"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:contentDescription="@string/img_review"
                        android:src="@drawable/img_popular"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/deving2"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="리뷰 보기"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/layout_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_box_purple"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_setting"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_automatic85"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rs6556pyx5tq"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="환경설정"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rx5ekyvmao7e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="33dp"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_box_purple"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_support"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_support85"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/deving3"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="고객센터"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/layout_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_box_purple"                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_notice"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_event85" />

                    <TextView
                        android:id="@+id/rnwd0rymnwfd"
                        android:textColor="#5A5ABB"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="공지사항"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_build_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_box_purple"                android:paddingVertical="7dp"
                android:layout_marginBottom="61dp"
                android:layout_marginHorizontal="33dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rx2swut2n9o8"
                    android:layout_width="26dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_make" />

                <TextView
                    android:id="@+id/tocomputer"
                    android:textColor="#2E0753"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="1dp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="나만의 컴퓨터 만들러 가기"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageHomeOne"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_home"
                android:contentDescription="@string/lowbar_home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageWhatidoOne"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_what_i_do"
                android:contentDescription="@string/lowbar_build"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageAutomaticOne"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_automatic"
                android:contentDescription="@string/lowbar_setting"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <!-- ========== 챗봇 Fragment를 담을 컨테이너 (처음에는 숨겨져 있음) ========== -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/chatbot_fragment_container"
        android:name="com.capstone.myapplication.ChatbotFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:visibility="gone" />

    <!-- ========== 챗봇 실행 버튼 (FAB) ========== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="챗봇 열기"
        android:src="@drawable/img_bot"
        app:backgroundTint="#5959BA"
        app:maxImageSize="36dp" />
</FrameLayout>
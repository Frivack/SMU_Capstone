<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_title_background"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/writeing"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_title_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writing"
            android:textAppearance="@style/char20purple"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1"
        android:background="@drawable/layout_title_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title"
            style="@style/char20lightpurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="19dp"
            android:background="@null"
            android:gravity="top"
            android:inputType="text"
            android:hint="제목" />

        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/img_camera" />

            <ImageView
                android:id="@+id/picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:contentDescription="picture"
                android:src="@drawable/img_picture" />

            <ImageView
                android:id="@+id/play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:contentDescription="play"
                android:src="@drawable/img_play" />

            <ImageView
                android:id="@+id/font"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="15dp"
                android:contentDescription="font"
                android:src="@drawable/img_font" />
        </LinearLayout>

        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/line" />

        <EditText
            android:id="@+id/some_id"
            style="@style/char20lightpurple"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:gravity="top"
            android:hint="내용을 입력하세요." />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/post_frame"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:background="@drawable/layout_blue">
        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post"
            android:textAppearance="@style/char20lightpink"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearRowhomeOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal|bottom"
        android:background="@drawable/layout_background"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <ImageView android:id="@+id/imageHomeOne"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/lowbar_home"
            android:src="@drawable/img_home"/>
        <View android:background="#30000000"
            android:id="@+id/lineLineoneOne"
            android:layout_height="59dp" android:layout_width="1dp"/>
        <ImageView android:id="@+id/imageWhatidoOne"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/lowbar_build"
            android:src="@drawable/img_what_i_do"/>
        <View android:background="#30000000"
            android:id="@+id/lineLineoneThree"
            android:layout_height="59dp" android:layout_width="1dp"/>
        <ImageView android:id="@+id/imageAutomaticOne"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/lowbar_setting"
            android:src="@drawable/img_automatic"/>
    </LinearLayout>
</LinearLayout>
